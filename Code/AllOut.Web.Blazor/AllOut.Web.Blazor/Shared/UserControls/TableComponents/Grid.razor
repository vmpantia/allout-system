@attribute [CascadingTypeParameter(nameof(TItem))]
@typeparam TItem

<table class="cstm-table">
    <thead>
        <tr>
            @Columns(default(TItem))
        </tr>
    </thead>
    <tbody>
        @if (Items != null && Items.Count == 0)
        {
            var properties = Items.GetType().GetProperties().Count();
            <tr>
                <td colspan="@properties">
                    <div class="cstm-no-records">
                        @Constants.ERROR_NO_RECORDS
                    </div>
                </td>
            </tr>
        }
        else if(Items != null)
        {
            @foreach (var item in Items)
            {
                <CascadingValue Value="item">
                    <tr>
                        @Columns(item)
                    </tr>
                </CascadingValue>
            }
        }
    </tbody>
</table>
@code {

    [Parameter]
    public List<TItem> Items { get; set; }

    [Parameter]
    public RenderFragment<TItem>? Columns { get; set; }
}
