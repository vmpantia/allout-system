@inject IHTTPService _http


<ModalInfo @ref="modalInfo"
           ModalIcon="@icon" ModalTitle="@title" ModalDescription="@description"
           SaveButtonClicked="SaveButtonClicked"
           CancelButtonClicked="CancelButtonClicked">
    <Fields>
        <TextBox Label="Email" ControlEnableState="@modalInfo.ControlEnableState" @bind-BindingValue="@userInfo.Email" />
        <TextBox Label="Username" ControlEnableState="@modalInfo.ControlEnableState" @bind-BindingValue="@userInfo.Username" />
        <TextBox Label="First Name" ControlEnableState="@modalInfo.ControlEnableState" @bind-BindingValue="@userInfo.FirstName" />
        <TextBox Label="Middle Name" ControlEnableState="@modalInfo.ControlEnableState" @bind-BindingValue="@userInfo.MiddleName" />
        <TextBox Label="Last Name" ControlEnableState="@modalInfo.ControlEnableState" @bind-BindingValue="@userInfo.LastName" />
        <ComboBox Label="Role" ControlEnableState="@modalInfo.ControlEnableState" @bind-BindingValue="@userInfo.RoleID"
                  DataSource="@roleList" ValueMember="RoleID" DisplayMember="Name" />
      
    </Fields>
</ModalInfo>

@code {
    #region Variable(s)
    private ModalInfo? modalInfo;

    private string icon = string.Empty;
    private string title = string.Empty;
    private string description = string.Empty;

    private bool isAdd = false;

    private User userInfo = new User();

    private List<Role> roleList = new List<Role>();
    #endregion

    #region Event Handler(s) of Components
    [Parameter]
    public EventCallback<Response> UserInfoResponse { get; set; }
    #endregion

    public async Task InitializeUser(Guid userID)
    {
        //Check if the transaction is add or edit
        isAdd = userID == Guid.Empty;

        StateHasChanged();

        Reset(true);
        SetTitle(isAdd);

        if (isAdd)
            return;

        //Edit Data
        var response = await _http.GetRequestAsync(Globals.GET_USER_BY_ID,
                                                   Globals.ClientInformation.ClientID,
                                                   userID);
        if (response.Result != ResponseResult.SUCCESS)
        {
            if (modalInfo != null)
                modalInfo.ErrorMessageValue = response.Data;
            return;
        }
        userInfo = JsonConvert.DeserializeObject<User>(response.Data)!;
        //Not able to Edit information once the status is NOT Enabled
        if (modalInfo != null)
            modalInfo.ControlEnableState = userInfo.Status == Constants.STATUS_ENABLED_INT;
    }

    #region Event Handler Functions
    private async Task SaveButtonClicked()
    {
        userInfo.Email = userInfo.Email == null ? string.Empty : userInfo.Email.ToUpper();
        userInfo.FirstName = userInfo.FirstName == null ? string.Empty : userInfo.FirstName.ToUpper();
        userInfo.MiddleName = userInfo.MiddleName == null ? string.Empty : userInfo.MiddleName.ToUpper();
        userInfo.LastName = userInfo.LastName == null ? string.Empty : userInfo.LastName.ToUpper();
        //Prepare Request for Save
        var request = new SaveUserRequest
            {
                FunctionID = isAdd ? Constants.FUNCTION_ID_ADD_USER_BY_ADMIN :
                                     Constants.FUNCTION_ID_CHANGE_USER_BY_ADMIN,
                RequestStatus = Constants.REQUEST_STATUS_COMPLETED,
                client = Globals.ClientInformation,
                inputUser = userInfo
            };

        //Send Request for Save
        var response = await _http.PostRequestAsync(Globals.POST_SAVE_USER, request);

        //Check Response Result
        if (response.Result != ResponseResult.SUCCESS)
        {
            if (modalInfo != null)
                modalInfo.ErrorMessageValue = response.Data;
            return;
        }

        Reset(false);
        await UserInfoResponse.InvokeAsync(response);
    }

    private async Task CancelButtonClicked()
    {
        Reset(false);
        await UserInfoResponse.InvokeAsync(null);
    }
    #endregion

    #region Common Functions
    private async Task PopuplateRoles()
    {
        var response = await _http.GetRequestAsync(Globals.GET_ROLES_BY_STATUS,
                                                   Globals.ClientInformation.ClientID,
                                                   Constants.STATUS_ENABLED_INT);
        if (response.Result != ResponseResult.SUCCESS)
        {
            if (modalInfo != null)
                modalInfo.ErrorMessageValue = response.Data;
            return;
        }
        roleList = JsonConvert.DeserializeObject<List<Role>>(response.Data)!;
    }

    private void Reset(bool isModalShow)
    {
        if (modalInfo != null)
        {
            modalInfo.ModalVisibleState = isModalShow;
            modalInfo.ControlEnableState = true;
            modalInfo.ErrorMessageValue = string.Empty;
        }
        //Reset
        userInfo = new User();
    }

    private void SetTitle(bool isAdd)
    {
        title = string.Format(isAdd ? Constants.TITLE_ADD : Constants.TITLE_EDIT, Constants.OBJECT_USER);
        description = string.Format(isAdd ? Constants.DESC_ADD : Constants.DESC_EDIT, Constants.OBJECT_USER);
        icon = isAdd ? Constants.OI_PLUS : Constants.OI_PENCIL;
    }
    #endregion
}
